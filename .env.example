# KuCoin Trading Bot Configuration

# ============================================================================
# API CREDENTIALS
# ============================================================================
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_api_passphrase_here
KUCOIN_FUTURES_ENDPOINT=https://api-futures.kucoin.com

# ============================================================================
# PORTFOLIO CONFIGURATION
# ============================================================================
# Amount of BTC in cold storage (off-exchange)
COLD_STORAGE_BTC_AMOUNT=0.0001

# Futures symbol to trade
FUTURES_SYMBOL=XBTUSDM

# Target BTC allocation percentage (e.g., 50.0 for 50% BTC / 50% USD)
TARGET_BTC_ALLOCATION=50.0

# Rebalancing threshold in percentage (e.g., 1.0 for Â±1%)
REBALANCE_THRESHOLD=1.0

# Fetch interval in seconds (how often to check portfolio)
FETCH_INTERVAL=5

# ============================================================================
# TRADING CONTROLS
# ============================================================================
# Enable automatic rebalancing (true/false)
AUTO_REBALANCE=true

# Dry run mode - simulate orders without executing (true/false)
DRY_RUN=true

# Leverage multiplier
LEVERAGE=5

# Maximum order size in USD
MAX_ORDER_SIZE_USD=10000

# Minimum order size in USD
MIN_ORDER_SIZE_USD=100

# ============================================================================
# TRADING MODES
# ============================================================================
# Margin mode: ISOLATED or CROSS
MARGIN_MODE=ISOLATED

# Position mode: ONE_WAY or HEDGE_MODE
POSITION_MODE=ONE_WAY

# Automatically set position mode if mismatch (true/false)
AUTO_SET_POSITION_MODE=false

# ============================================================================
# ORDER EXECUTION
# ============================================================================
# Order type: market or limit
ORDER_TYPE=limit

# Time in force for limit orders: IOC, GTC, or FOK
# IOC = Immediate or Cancel
# GTC = Good Till Cancelled
# FOK = Fill or Kill
TIME_IN_FORCE=IOC

# Slippage percentage for limit orders
# Positive = aggressive (pay more for instant fill, e.g., 0.1)
# Negative = conservative (wait for better price, e.g., -0.1)
SLIPPAGE_PERCENTAGE=0.1

# Timeout for GTC orders in seconds (before cancel and retry)
GTC_TIMEOUT_SECONDS=300

# ============================================================================
# LOGGING CONFIGURATION (NEW in v3.3.0)
# ============================================================================

# --- SYSTEM LOGGING (trading_bot.log) ---
# Enable/disable system log file (true/false)
FILE_SYSTEM_LOGGING_ENABLED=true

# Log level for trading_bot.log
# ERROR   = Only critical errors
# WARNING = Errors + warnings
# TRADE   = Errors + warnings + trades + startup/shutdown (RECOMMENDED)
# INFO    = Everything (verbose, includes API calls and monitoring)
FILE_LOG_LEVEL=TRADE

# Log rotation for trading_bot.log (hours)
# Entries older than this will be automatically deleted
# Examples: 24 (1 day), 168 (7 days), 720 (30 days)
# Set to 0 to disable rotation (keep all logs)
FILE_LOG_ROTATION_HOURS=168

# --- TRADE CSV LOGGING (trades_YYYY-MM.csv) ---
# Enable/disable CSV trade logging (true/false)
FILE_TRADING_LOGGING_ENABLED=true

# ============================================================================
# NOTES
# ============================================================================
# 
# LOGGING BEHAVIOR:
# - Console: Always shows minimal status (one line per cycle)
# - trading_bot.log: Controlled by FILE_SYSTEM_LOGGING_ENABLED and FILE_LOG_LEVEL
# - trades_YYYY-MM.csv: Controlled by FILE_TRADING_LOGGING_ENABLED
# 
# RECOMMENDED SETTINGS:
# Production: FILE_LOG_LEVEL=TRADE, FILE_LOG_ROTATION_HOURS=168
# Testing: FILE_LOG_LEVEL=INFO, FILE_LOG_ROTATION_HOURS=24
# Minimal: FILE_SYSTEM_LOGGING_ENABLED=false (console + CSV only)
# 
# LOG LEVELS EXPLAINED:
# - TRADE level logs: Startup, shutdown, trades, warnings, errors
# - INFO level adds: API calls, position checks, price calculations
# 
# ROTATION:
# - Applies only to trading_bot.log (not CSV files)
# - CSV files rotate monthly automatically (trades_2025-11.csv)
# - Set FILE_LOG_ROTATION_HOURS based on your storage capacity
# 
# ============================================================================
